    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linux Demo App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildLinuxDemoApp",
            "program": "${workspaceFolder}/CorePixelEngine.DemoApp.Linux/bin/Debug/netcoreapp3.1/CorePixelEngine.DemoApp.Linux.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Windows Demo App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildWindowsDemoApp",
            "program": "${workspaceFolder}/CorePixelEngine.DemoApp.Windows/bin/Debug/netcoreapp3.1/CorePixelEngine.DemoApp.Windows.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}